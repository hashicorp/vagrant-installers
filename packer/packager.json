{
    "variables": {
        "do_client_id": null,
        "do_api_key": null
    },

    "builders": [
        {
            "name": "centos-5-x64",
            "type": "digitalocean",
            "client_id": "{{user `do_client_id`}}",
            "api_key": "{{user `do_api_key`}}",
            "image_id": 1601,
            "region_id": 3,
            "size_id": 66,
            "snapshot_name": "vagrant-packager-centos-5-x64 {{timestamp}}"
        },
        {
            "name": "centos-5-x32",
            "type": "digitalocean",
            "client_id": "{{user `do_client_id`}}",
            "api_key": "{{user `do_api_key`}}",
            "image_id": 1602,
            "region_id": 3,
            "size_id": 66,
            "snapshot_name": "vagrant-packager-centos-5-x32 {{timestamp}}"
        },
        {
            "name": "freebsd-10-x64",
            "type": "digitalocean",
            "client_id": "{{user `do_client_id`}}",
            "api_key": "{{user `do_api_key`}}",
            "image_id": "XXX",
            "region_id": 3,
            "size_id": 66,
            "snapshot_name": "vagrant-packager-freebsd-10-x64 {{timestamp}}"
        },
        {
            "name": "freebsd-10-x32",
            "type": "digitalocean",
            "client_id": "{{user `do_client_id`}}",
            "api_key": "{{user `do_api_key`}}",
            "image_id": "XXX",
            "region_id": 3,
            "size_id": 66,
            "snapshot_name": "vagrant-packager-freebsd-10-x32 {{timestamp}}"
        },
        {
            "name": "ubuntu-10-x64",
            "type": "digitalocean",
            "client_id": "{{user `do_client_id`}}",
            "api_key": "{{user `do_api_key`}}",
            "image_id": 14097,
            "region_id": 3,
            "size_id": 66,
            "snapshot_name": "vagrant-packager-ubuntu-10-x64 {{timestamp}}"
        },
        {
            "name": "ubuntu-10-x32",
            "type": "digitalocean",
            "client_id": "{{user `do_client_id`}}",
            "api_key": "{{user `do_api_key`}}",
            "image_id": 14098,
            "region_id": 3,
            "size_id": 66,
            "snapshot_name": "vagrant-packager-ubuntu-10-x32 {{timestamp}}"
        }
    ],

    "provisioners": [
        {
            "type": "shell",
            "override": {
                "centos-5-x64": {
                    "scripts": ["scripts/packager_centos.sh"]
                },
                "centos-5-x32": {
                    "scripts": ["scripts/packager_centos.sh"]
                },
                "freebsd-10-x64": {
                    "scripts": ["scripts/packager_freebsd.sh"]
                },
                "freebsd-10-x32": {
                    "scripts": ["scripts/packager_freebsd.sh"]
                },
                "ubuntu-10-x64": {
                    "scripts": ["scripts/packager_ubuntu.sh"]
                },
                "ubuntu-10-x32": {
                    "scripts": ["scripts/packager_ubuntu.sh"]
                }
            }
        }
    ]
}
