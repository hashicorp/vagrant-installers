{
  "builders": [
    {
      "boot_command": [
        "<esc><wait>",
        "<esc><wait>",
        "<enter><wait>",
        "/install/vmlinuz<wait>",
        " auto<wait>",
        " console-setup/ask_detect=false<wait>",
        " console-setup/layoutcode=us<wait>",
        " console-setup/modelcode=pc105<wait>",
        " debconf/frontend=noninteractive<wait>",
        " debian-installer=en_US.UTF-8<wait>",
        " fb=false<wait>",
        " initrd=/install/initrd.gz<wait>",
        " kbd-chooser/method=us<wait>",
        " keyboard-configuration/layout=USA<wait>",
        " keyboard-configuration/variant=USA<wait>",
        " locale=en_US.UTF-8<wait>",
        " netcfg/get_domain=vm<wait>",
        " netcfg/get_hostname=vagrant<wait>",
        " noapic<wait>",
        " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{user `preseed_path`}}<wait>",
        " -- <wait>",
        "<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": "{{user `disk_size`}}",
      "guest_os_type": "ubuntu",
      "headless": true,
      "http_directory": "http",
      "iso_checksum": "{{user `iso_checksum_type`}}:{{user `iso_checksum`}}",
      "iso_url": "{{user `mirror`}}/{{user `mirror_directory`}}/{{user `iso_name`}}",
      "output_directory": "output-{{ user `name` }}-vmware-iso",
      "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_timeout": "10000s",
      "ssh_username": "vagrant",
      "tools_upload_flavor": "linux",
      "type": "vmware-iso",
      "vm_name": "{{ user `name` }}",
      "vmx_data": {
        "cpuid.coresPerSocket": "1",
        "memsize": "{{ user `memory` }}",
        "numvcpus": "{{ user `cpus` }}",
        "tools.upgrade.policy": "manual"
      },
      "vmx_remove_ethernet_interfaces": true
    }
  ],
  "post-processors": [
    [
      {
        "keep_input_artifact": false,
        "output": "{{user `box_basename`}}-{{user `version`}}.{{user `build_timestamp`}}.box",
        "type": "vagrant",
        "vagrantfile_template": "vagrantfile-linux.template"
      },
      {
        "box_tag": "hashicorp-vagrant/{{user `box_basename`}}",
        "type": "vagrant-cloud",
        "version": "{{user `version`}}.{{user `build_timestamp`}}"
      }
    ]
  ],
  "provisioners": [
    {
      "environment_vars": [
        "HOME_DIR=/home/vagrant",
        "http_proxy={{user `http_proxy`}}",
        "https_proxy={{user `https_proxy`}}",
        "no_proxy={{user `no_proxy`}}",
        "GO_INSTALL_VERSION={{user `go_version`}}"
      ],
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E sh -eux '{{.Path}}'",
      "expect_disconnect": true,
      "scripts": [
        "scripts/ubuntu/update.sh",
        "scripts/ubuntu/vagrant.sh",
        "scripts/ubuntu/sshd.sh",
        "scripts/ubuntu/vmware.sh",
        "scripts/ubuntu/install-dev-tools.sh",
        "scripts/ubuntu/ruby.sh",
        "scripts/ubuntu/go.sh",
        "scripts/ubuntu/motd.sh",
        "scripts/ubuntu/fpm.sh",
        "scripts/ubuntu/cleanup.sh"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "box_basename": "ubuntu-14.04-i386",
    "build_timestamp": "{{isotime \"20060102150405\"}}",
    "cpus": "1",
    "disk_size": "65536",
    "http_proxy": "{{env `http_proxy`}}",
    "https_proxy": "{{env `https_proxy`}}",
    "iso_checksum": "976044842804eafc18390505508958b559c131211160ecae5e60694bdf171f78",
    "iso_checksum_type": "sha256",
    "iso_name": "ubuntu-14.04.1-server-i386.iso",
    "memory": "1024",
    "mirror": "http://old-releases.ubuntu.com/releases",
    "mirror_directory": "14.04.1",
    "name": "ubuntu1404-i38",
    "no_proxy": "{{env `no_proxy`}}",
    "preseed_path": "preseed.cfg",
    "go_version": "{{env `GO_INSTALL_VERSION`}}",
    "version": "1.0"
  }
}

